<div>
    <div class="input_panel">
        <%= form_tag(root_path, method: :get) do %>
        <label>Set grid size:</label>  <br/>
            <label>X :</label> <%= text_field_tag :x, params[:x], autocomplete: 'off' %>
            <label>Y :</label> <%= text_field_tag :y, params[:y], autocomplete: 'off' %>
            <%= submit_tag 'Change Size' %>
        <% end %>
        
    </div>

    <div class="rover_input">
    <%# Creates a new rover %>
    <%= link_to 'Generate a rover <- Click me!', create_rover_path, method: :get, remote: true, class:'create_rover' %>
    <%# By default there is one rover %>
        <%= form_tag(rovers_instructions_path, method: :post, remote: true) do %>
            <label>Set Starting point :</label> 
            <%= hidden_field_tag :rover_id0,"", value:0 %>
            <%= text_field_tag :path0, params[:path0], autocomplete: 'off', value:'1 1 S' %>
            <label>Give directions :</label> <%= text_field_tag :directions0, params[:directions0], autocomplete: 'off' %>
            <div class="rover_instructions"></div>
            <%= submit_tag 'Change' %>
        <% end %>
        <%= button_to 'Start', start_path, remote: true, class:'start_btn' %>
    </div>
        

    <div class="plateau_panel">
        <%# This builds the grid layout with the X,Y axis %>
        <% @grid_hash.reverse.each_with_index do |grid, index| %>
            <div class="location">
                <p>X(<%= grid[:location].first %>) , Y(<%= grid[:location].last %>)</p>
                <div id="<%= grid[:location].first %><%= grid[:location].last %>">
                
                </div>
            </div>
        <% end %>
    </div>
</div>